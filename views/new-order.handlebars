                {{/product}}
            </select>
            
            <input type="hidden" name="product-price" value="{{product.price}}">
            <label for="product-qty">Quantidade:</label>
            <input type="number" id="product-qty" name="product-qty">
            <label for="products-price">Preço total:</label>

            <input type="text" id="products-total-price" name="products-price" readonly>
            -->

            <table>
                <tr>
                    <th>Produto</th>
                    <th>Preço</th>
                </tr>
                {{#product}}
                    <tr>
                        <td>{{name}}</td>
                        <td id="price">{{price}}</td>
                        <td><a href="#" id="addButton">Add</a></td>
                    </tr>
                {{/product}}
            </table>

        </fieldset>

        <fieldset class="total-price">
            <label for="total-price" id="totalLabel">Total:</label>
            <input type="text" id="total-price" name="total-price" readonly>
        </fieldset>
    </form>


    <script src="/scripts/new-order.js"></script>

</body>
</html>